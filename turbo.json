{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build", "^type-check"]
    },
    "lint": {
      "dependsOn": ["^build", "^lint"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
