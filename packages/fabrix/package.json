{
  "name": "@fabrix-framework/fabrix",
  "private": false,
  "version": "0.4.0",
  "description": "schema-driven UI packages",
  "homepage": "https://fabrix-framework.github.io/docs/",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabrix-framework/fabrix.git"
  },
  "exports": {
    ".": {
      "types": "./dist/fabrix.d.mts",
      "default": "./dist/fabrix.mjs"
    },
    "./rhf": {
      "types": "./dist/rhf.d.mts",
      "default": "./dist/rhf.mjs"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "dev": "NODE_ENV=development tsup --watch",
    "build": "tsup",
    "lint": "eslint '**/*.{ts,tsx}' --ignore-pattern 'dist/*' --max-warnings=0",
    "type-check": "tsc --noEmit --incremental --pretty",
    "test": "vitest run"
  },
  "keywords": [
    "react",
    "graphql",
    "codegen",
    "generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "deepmerge-ts": "^7.1.0",
    "es-toolkit": "^1.30.1",
    "graphql-tag": "^2.12.6",
    "react-hook-form": "^7.53.1",
    "urql": "^4.2.1",
    "wonka": "^6.3.4",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "graphql": "^16",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@fabrix-framework/eslint-config": "workspace:*",
    "@fabrix-framework/prettier-config": "workspace:*",
    "@faker-js/faker": "^9.0.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.7.5",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.18.0",
    "happy-dom": "^16.5.3",
    "msw": "^2.7.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "prettier": "@fabrix-framework/prettier-config"
}
